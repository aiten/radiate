<j:jelly xmlns:j="jelly:core" xmlns:x="jelly:xml">
<x:doctype name="html"/>
<html>
<head>
    <title>Radiate</title>
    <link rel="stylesheet" type="text/css" href="${rootURL}/plugin/radiate/css/radiate.css" />
</head>
<body>
    <ol id="jobs">
	<j:forEach var="status" items="${it.statuses}">
	    <li>
	        <h2>${status.name} #${status.buildNumber}</h2>

	        <ol class="causes">
	        <j:forEach var="cause" items="${status.causes}">
	            <li>${cause.shortDescription}</li>
	        </j:forEach>
	        </ol>
	        <p>${status.duration} ms</p>
	    </li>
	</j:forEach>
    </ol>
</body>
</html>
</j:jelly>